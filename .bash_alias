alias ll='ls -al'
alias otext='open -a TextEdit'

alias g='git'
alias gco='g checkout'
alias gpo='g push origin'
alias gpd='g push dev'
alias gb='g branch'
alias gcom='gco master'
alias gpum='git pull origin master'
alias gpom='g push origin master'
alias gap='git add --patch'
alias gsl='g stash list'
alias gss='g stash save'
alias gsa='g stash apply'
alias gsd='g stash drop'
alias glg='g log --graph --decorate --oneline'
alias gst='git status'
alias grm='git rm $(git ls-files --deleted)'
alias runtest='bundle exec rspec'
alias pushall='git add . && git commit && gpo'

function rbm {
  git stash && gcom && gpum && gco $1 && git rebase master && git stash pop
}

function clear {
  gcom && gpum && git fetch -p && git branch -D $1 && glg
}

function c {
  cd ~/Sites/$1
}

function cbr {
  git push origin :$1 && git branch -D $1
}
